<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/background_1"
        android:layout_margin="20dp"
        android:id="@+id/rl_layout_new_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_new_user_proname"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:text="新用户专享1号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="40dp"
            android:text="12%"
            android:textColor="@color/red"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bt_new_user_buy"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="起投金额:10元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="投资期限:30天"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/bt_new_user_buy"
            android:background="@drawable/btn_backgorund_buy"
            android:text="立即抢购"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:text="新用户专享"
        android:gravity="center"
        android:background="@drawable/background_2"
        android:textColor="@color/white"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@id/rl_layout_new_user"
        android:layout_width="100dp"
        android:layout_height="30dp" />
</RelativeLayout>