<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_act_main"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.aqiang.common.wiget.TitleBar
            android:id="@+id/titlebar_act_main"
            app:title="梧桐金融"
            app:leftIcon="@drawable/user2"
            app:rightIcon="@drawable/msg2"
            android:layout_width="match_parent"
            android:layout_height="50dp"></com.aqiang.common.wiget.TitleBar>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_act_main"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </android.support.v4.view.ViewPager>
        <android.support.design.widget.BottomNavigationView
            app:itemHorizontalTranslationEnabled="false"
            android:background="@color/colorPrimary"
            android:id="@+id/boview_act_main"
            android:layout_weight="1"
            app:menu="@menu/menu_bottombar"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@drawable/bottombat_text_color"
            app:itemTextColor="@drawable/bottombat_text_color"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </android.support.design.widget.BottomNavigationView>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navi_act_main"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:background="@color/colorPrimary"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/menu_drawlayout"
        android:layout_gravity="left"
        android:layout_width="260dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <Button
                style="@style/normalTxtStyle"
                android:background="@drawable/btn_success_background"
                android:layout_gravity="center"
                android:text="实名认证"
                android:layout_width="150dp"
                android:layout_height="wrap_content"></Button>
            <Button
                android:layout_marginTop="2dp"
                android:background="@drawable/btn_error_background"
                style="@style/normalTxtStyle"
                android:layout_gravity="center"
                android:text="退出登录"
                android:layout_width="150dp"
                android:layout_height="wrap_content"></Button>
            <TextView
                style="@style/normalTxtStyle"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="联系电话"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
            <TextView
                style="@style/normalTxtStyle"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/phone"
                android:text="010-88888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"></TextView>
        </LinearLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>